<div id=<%= "new_#{comment.id}"  %>>
  <%= form_for [comment, Comment.new], remote: true, class: 'add_comment' do |f| %>
    <%= f.text_area :body, placeholder: "Add a Reply" %><br/>
    <div class="row">
    <%= f.submit "Reply"  %>
  <% end %>
      <% if comment.user.id == current_user.id %>
        <%= link_to "Delete", comment_path(comment), class: 'delete_comment' , method: :delete, remote: true, data: { confirm: 'Are you sure?', remote: true } %> 
      <% end %>
    </div>
</div>