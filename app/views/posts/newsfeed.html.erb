<strong>Followed Users</strong><br />
<small>Click on email to unfollow</small>
<p>
  <%= render partial: "users/followed_users", collection: @followed_users, as: :user %>
</p>
<h1>NewsFeed</h1>
<%= link_to 'New Post', new_post_path %>
<br />
<% if @followed_users.count < 1 %>
  <p>Nothing to show on NewsFeed</p>
<% end %>
<% @followed_users.each do |user| %>
  <% if user.posts.count > 0 %>
    <%= render partial: "post", collection: user.posts, as: :post, remote: true  %>
  <% end %>
<% end %>

<h2>Users you can follow</h2>
<% if @not_followed_users.count < 1 %>
  <p>No one to follow!</p>
<% end %>
<%= render partial: "users/user", collection: @not_followed_users, as: :user %>